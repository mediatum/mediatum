- extends "styles/base.j2.jade"
- from "styles/macros.j2.jade" import metis

- block top
  = metis(metis_url)

- block before_metadata
  if data_access and has_original
    .object_image.object_column.left
      .document_thumb
        a(href=documentlink, target="documentdownload", onclick="vgwPixelCall();", title=_t("doc_fulltext_title"))
          img(src=documentthumb, width="300")

      .document_download
        a(href=documentdownload, onclick="vgwPixelCall();")= _t("alternative_pdf_link")


