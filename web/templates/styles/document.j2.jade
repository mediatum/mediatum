- extends "styles/base.j2.jade"
- from "styles/macros.j2.jade" import metis

- block top
  = metis(metis_url)

- block before_metadata
  if data_access and has_original
    .object_image.object_column.left
      a(href=documentlink, target="documentdownload", onclick="vgwPixelCall();", title=translate("doc_fulltext_title"))
        .document_thumb
          img(src=documentthumb)

      .document_download
        a(href=documentdownload, onclick="vgwPixelCall();")= translate("alternative_pdf_link")


