each file in files
  - var mapping = dict(name=xml_escape(file.node.name), nodeid=file.node.id|string)
  - var title = translate('stylelist-nodelink-title', mapping=mapping)
  .preview_list
    if file.attachment
      div.mediatum-stylelist-attach
        img.mediatum-icon-small(title=translate('view_list_att_title'), src='/static/img/attachment-paperclip.svg')
    div.mediatum-stylelist-img
      if title
        a.mediatum-stylelist-a(href=file.getLink(), title=title)
          img.thumbnail(src='/thumbnail/{}'.format(file.node.id), border='0')
      else
        a.mediatum-stylelist-a(href=file.getLink())
          img.thumbnail(src='/thumbnail/{}'.format(file.node.id), border='0')
    div.mediatum-stylelist-div
      if title
        a.mediatum-stylelist-a.mediatum-link-internal(href=file.getLink(), title=title)
          = translate('stylelist-nodelink-text', mapping=mapping)
      else
        a.mediatum-stylelist-a.mediatum-link-internal(href=file.getLink())
          = translate('stylelist-nodelink-text', mapping=mapping)
      p
        = file.text
    .break
      = ''
