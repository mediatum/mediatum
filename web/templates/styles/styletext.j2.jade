- from "styles/macros.j2.jade" import itemsperpage

= itemsperpage(nodesperpage, nodesperpage_options)

each file in files
  .preview_text(style="height: auto; padding-bottom: 10px", onmouseover="this.style.backgroundColor='#cccccc'", onmouseout="this.style.backgroundColor='white'")
    a(href=file.getLink(), style='padding:2px')
      div(style="margin:0px 30px")
        = file.text
    div(style="position:absolute; right:23px; top:3px; overflow:hidden;")
      if file.attachment
        img(title=_t('view_list_att_title'), src='/img/attach.png')
      | &nbsp;
      if file.node.has_object()
        img(title=_t('content_text_file_title'), src='/img/file.gif')
    .break
      = ''
