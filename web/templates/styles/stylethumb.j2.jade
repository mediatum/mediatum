each file in files
  - var mapping = dict(name=xml_escape(file.node.name), nodeid=file.node.id|string)
  - var title = translate('stylelist-nodelink-title', mapping=mapping)
  .preview
    if file.attachment
      div.mediatum-stylethumb-attach
        img(title=translate('view_list_att_title'), src='/static/img/attach.png')
    div.mediatum-stylethumb-div-img
      if title
        a(href=file.getLink(), title=title)
          img.thumbnail(src='/thumbnail/{}'.format(file.node.id), border='0')
      else
        a(href=file.getLink())
          img.thumbnail(src='/thumbnail/{}'.format(file.node.id), border='0')
    div.mediatum-stylethumb-div-p
      if title
        a.mediatum-link-internal(href=file.getLink(), title=title)
          = translate('stylelist-nodelink-text', mapping=mapping)
      else
        a.mediatum-link-internal(href=file.getLink())
          = translate('stylelist-nodelink-text', mapping=mapping)
      p.mediatum-stylethumb-p
        = file.text
.break
