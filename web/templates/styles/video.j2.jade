- extends "styles/base.j2.jade"
- from "styles/macros.j2.jade" import metis

- block top
  = metis(metis_url)

- block before_metadata
  if video_url
    .object_video.object_column.left
      .video_container
        video(controls="controls", preload="metadata", onplay="vgwPixelCall();")
          source(type="video/mp4", src=video_url)
          if webvtt_url
            track(src=webvtt_url, kind="subtitles", default)
  else
    .document_thumb
      img(src="/thumb2/{{ node.id }}", width="300")


