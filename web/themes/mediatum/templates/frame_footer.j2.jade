- macro show_foot_links(items)
  for item in items
    if item.getType()!='text'
      if item.getType() == 'link'
        a.customcontent.mediatum-link-external(href=item.getLink())
          if item.getIcon() != ''
            img.customcontent(src=item.getIcon(), border='0px')
          =translate(item.getName())
      else
        a.customcontent.mediatum-link-internal(href=item.getLink())
          if item.getIcon() != ''
            img.customcontent(src=item.getIcon(), border='0px')
          =translate(item.getName())
      else
        =translate(item.getName())

#footer
  span.footer_left
    = show_foot_links(footer_left_items)
  span.footer_right
    = show_foot_links(footer_right_items)
