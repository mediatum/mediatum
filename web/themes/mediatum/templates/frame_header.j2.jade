#portal-top
  .header.header-left
    block left
      ul
        li
          a.mediatum-link-mediatum(href='/')
            = translate('main_title')
        li
          a.mediatum-link-external(href='https://github.com/mediatum/mediatum', target='_blank') mediatum

  .header.header-right
    block right
      a.header-logo.mediatum-link-external(href='https://github.com/mediatum/mediatum', target='_blank', title='Home mediatum')
        = 'Logo goes here'

#portal-personaltools
  = translate("sub_header_user")
    | : {{ user_name }}

  for menuitem in userlinks.getLinks()
    a.mediatum-link-mediatum(href=menuitem.link, title=menuitem.title)
      | &nbsp;
      img(border='0', height='16', src=menuitem.icon)
      = menuitem.label

  for item in header_items
    if item.getType()!='text'
      a.mediatum-link-mediatum(href=item.getLink())
        if item.icon!=''
          img(border='0', height='16', src=item.icon)
          = translate(item.getName())
    else
      = translate(item.getName())
  if show_language_switcher
    #language_switch
      ul
        for lang in language['name']
          li
            if language['actlang']==lang
              a.selected_language.mediatum-link-mediatum(href=userlinks.change_language_link(lang))
                = lang
            else
              a.mediatum-link-mediatum(href=userlinks.change_language_link(lang))
                = lang

