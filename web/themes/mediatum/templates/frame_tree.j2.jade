#frame-tree.portlet
  nav(class="mediatum_portal_tree_subnav")
    ul#navigationlist
      for data in navtree_entries
        - var label = data.getText()
        if label
          li(class=data.getClass())
            div(style=data.getStyle(), class=['mediatum_portal_tree_link','mediatum_portal_tree_link_current'][data.active])
              if data.hassubdir
                - var sd = 'mediatum_portal_tree_has_submenu ' + ['mediatum_portal_tree_active',''][data.isFolded()]
              else
                - var sd = ''
              a(href=data.getFoldLink(), class=sd + " mediatum_portal_tree_subnav_link")
                = label
